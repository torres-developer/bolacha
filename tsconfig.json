{
	"compilerOptions": {
		"lib": ["dom", "esnext"],
		"module": "esnext",
		"target": "es2019",
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*"
	],
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Recommended"
}
